<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/ProductImageGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/slak"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/opacityrect"
        android:text="Fard A Joux Mabeyline"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingLeft="7dp"
        android:id="@+id/ProductNameGrid"
        android:layout_below="@id/ProductImageGrid"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="@drawable/opacityrect"
        android:text="Voir Produit "
        android:textSize="11sp"
        android:textColor="#000"

        android:paddingLeft="7dp"
        android:layout_below="@+id/ProductNameGrid"
        android:id="@+id/ProductPlusGris"
        />

    <TextView
        android:layout_width="120dp"

        android:layout_height="20dp"
        android:background="@drawable/opacityrect"
        android:text="â‚¬22.30 Euro  "
        android:textSize="15sp"
        android:textColor="#ff1748"

        android:layout_toRightOf="@id/ProductPlusGris"
        android:layout_below="@+id/ProductNameGrid"
        android:id="@+id/ProductPrixGrid"
        />




</RelativeLayout>

</RelativeLayout>