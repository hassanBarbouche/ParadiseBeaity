<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minWidth="360dp"
    >
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/slak"
        android:scaleType="centerCrop"
        android:id="@+id/produit_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/2017 18hh:30"
       android:layout_toRightOf="@id/produit_image"
        android:layout_marginLeft="5dp"
        android:textColor="#ff1748"
        android:textStyle="italic"
        android:textSize="9sp"
        android:id="@+id/news_date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nous les femme on s'en bas à mort olala coach à la maison"
        android:layout_toRightOf="@id/produit_image"
        android:layout_marginLeft="5dp"
        android:lines="3"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/news_title"
        android:layout_below="@id/news_date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Nous les femme on s'en bas à mort olala coach à la maison"
        android:layout_toRightOf="@id/produit_image"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:lines="2"
        android:textSize="10sp"
        android:id="@+id/news_contenu"
        android:layout_below="@id/news_title"
        android:layout_alignBottom="@+id/produit_image"
        />


</RelativeLayout>